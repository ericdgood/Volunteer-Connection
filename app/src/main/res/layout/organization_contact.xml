<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="20dp"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Contact"
        android:textSize="32sp"
        android:layout_margin="10dp"
        android:textColor="@color/text"
        android:gravity="center"/>

    <EditText
        android:background="@color/bkg"
        android:id="@+id/organization_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name:"
        android:layout_margin="10dp"
        android:inputType="text"
        android:padding="10dp"/>

    <EditText
        android:background="@color/bkg"
        android:id="@+id/organization_contact_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email:"
        android:layout_margin="10dp"
        android:inputType="text"
        android:padding="10dp"/>

    <EditText
        android:background="@color/bkg"
        android:id="@+id/organization_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone:"
        android:layout_margin="10dp"
        android:inputType="text"
        android:padding="10dp"/>

    <EditText
        android:background="@color/bkg"
        android:id="@+id/organization_contact_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title:"
        android:layout_margin="10dp"
        android:inputType="text"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

    <Button
        android:textSize="18sp"
        android:textColor="@color/btn_text"
        android:layout_margin="5dp"
        android:background="@color/btn"
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_weight="1" />

    <Button
        android:textSize="18sp"
        android:textColor="@color/btn_text"
        android:layout_margin="5dp"
        android:background="@color/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add another"
        android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>